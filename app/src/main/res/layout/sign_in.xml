<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:weightSum="10"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="30sp"
            android:text="ENCRYPT DATA"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_security"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="48dp"
            android:paddingRight="24dp"
            android:hint="Email"
            android:textColor="#ffffff"
            android:textColorHint="#8289B4"
            android:singleLine="true"
            android:background="@drawable/edtemail"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Mật khẩu"
            android:paddingLeft="48dp"
            android:paddingRight="24dp"
            android:textColor="#ffffff"
            android:textColorHint="#8289B4"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:background="@drawable/edtpw" />
        <CheckBox
            android:id="@+id/ckbRemember"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Ghi nhớ tài khoản và tự động đăng nhập"
            android:checked="false"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:layout_marginLeft="4dp"/>
        <Button
            android:id="@+id/btnSignIn"
            android:text="ĐĂNG NHẬP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_cyan"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/btnSignUp"
            android:text="Đăng ký tài khoản"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_red"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnForgetPw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Quên mật khẩu"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/btn_forgetpw"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</LinearLayout>