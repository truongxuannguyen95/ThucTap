<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UploadFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:text="Chưa có file nào được chọn..."
                android:textSize="16sp"
                android:textColor="#bcb3b3"
                android:gravity="left"
                android:padding="5dp"
                android:background="@drawable/corners"/>
            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/icon_search"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnUpload"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/btn_upload"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#0b0be4"
            android:layout_marginTop="50dp"
            android:text="File được chọn sẽ được mã hóa trước khi lưu lên server"/>
    </LinearLayout>
</FrameLayout>